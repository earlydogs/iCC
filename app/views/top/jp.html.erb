<div class="container-fluid h-100">
<div class="row no-gutters h-100">
    <div class="col-md-4 h-100">
        <div class="container-fluid h-100">
            <div class="col mb-4 shadow rounded">
                <%= form_tag("/", method: "post") do %>
                    <div class="form-group row mb-3 mt-2 pt-3">
                        <label class="col-6 col-form-label text-right" for="current_balance">元本（万円）</label>
                        <div class="col-6"><input class="form-control" type="tel" pattern="-?[0-9]*(\.[0-9]+)?" id="current_balance" name="current_balance" placeholder ="元本（万円）" value="<%=cookies[:current_balance]%>"></div>
                    </div>
                    <div class="form-group row mb-3">
                        <label class="col-6 col-form-label text-right" for="monthly_addition">毎月積立（万円）</label>
                        <div class="col-6"><input class="form-control" type="tel" pattern="-?[0-9]*(\.[0-9]+)?" id="monthly_addition" name="monthly_addition" placeholder ="毎月積立（万円）" value="<%=cookies[:monthly_addition]%>"></div>
                    </div>
                    <div class="form-group row mb-3">
                        <label class="col-6 col-form-label text-right" for="interest_rate_year">年利（％）</label>
                        <div class="col-6"><input class="form-control" type="tel" pattern="-?[0-9]*(\.[0-9]+)?" id="interest_rate_year" name="interest_rate_year" placeholder ="年利（％）" value="<%=cookies[:interest_rate_year]%>"></div>
                    </div>
                    <div class="form-group row mb-3">
                        <label class="col-6 col-form-label text-right" for="period_year">投資期間（年）</label>
                        <div class="col-6"><input class="form-control" type="tel" pattern="-?[0-9]*(\.[0-9]+)?" id="period_year" name="period_year" placeholder ="投資期間（年）" value="<%=cookies[:period_year]%>"></div>
                    </div>
                    <button type="submit" class="btn btn-lg btn-primary w-100 mb-4">複利計算</button>
                <%end%>
            </div>
            <div class="col shadow py-3 mb-3 rounded h-100">
                <font size="5">

                <div class="row mb-1">
                    <div class="col-6 text-right">投資総額：</div>
                    <div class="col-6 text-left"><%= @no_investment_final_balance %>万円</div>
                </div>
                <div class="row mb-1">
                    <div class="col-6 text-right">最終金額：</div>
                    <div class="col-6 text-left"><font color="blue"><%= @compound_final_balance %>万円</font></div>
                </div>
                <div class="row mb-1">
                    <div class="col-6 text-right">増加率　：</div>
                    <div class="col-6 text-left"><font color="blue"><%= @rate_of_increase %>％</font></div>
                </div>
                </font>
            </div>
        </div>
    </div>
    <div class="col-md-8 h-100">
        <div class="container-fluid h-100">
            <div class="col mb-4 shadow mt-2 pt-2 pb-4 rounded">
                <%= high_chart("my_chart", @chart) %>
            </div>
        </div>
    </div>
</div>
</div>
